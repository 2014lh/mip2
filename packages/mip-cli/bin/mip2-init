#!/usr/bin/env node

const cli = require('../lib/cli')
const checkVersion = require('../lib/check-version')
const init = require('../lib/init')

cli.setup({
  noArgs: true,
  help: [
    '',
    '  Examples:',
    cli.chalk.gray('    # 初始化 MIP 项目'),
    '    $ mip2 init'
  ].join('\n')
})

checkVersion().then(() => {
  init()
})
